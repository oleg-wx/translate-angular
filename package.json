{
  "name": "simply-translate-angular",
  "version": "0.0.0",
  "scripts": {
    "build:dev": "ng build translate --configuration development && npm run copy_readme",
    "build:prod": "ng build translate --configuration production && npm run copy_readme",
    "build:prod:patch": "cd ./projects/translate && npm --no-git-tag-version version patch && cd ../.. && npm run build:prod",
    "publish:prod": "npm run build:prod && cd dist/translate && npm publish && cd ../..",
    "publish:prod:patch": "npm run build:prod:patch && cd dist/translate && npm publish && cd ../..",
    "build:demo:dev": "ng build --configuration development",
    "build:demo:prod": "node --max-old-space-size=8192 ./node_modules/@angular/cli/bin/ng build --configuration production --aot",
    "start:demo": "ng serve --port 4800 --live-reload false",
    "restart:all": "npm run build:library:prod && npm run start:demo",
    "test": "ng test translate",
    "e2e": "ng e2e",
    "copy_readme": "copyfiles ./README.md dist/translate"
  },
  "dependencies": {
    "@angular/animations": "^14.2.8",
    "@angular/cdk": "^14.2.6",
    "@angular/cli": "^14.2.7",
    "@angular/common": "^14.2.8",
    "@angular/compiler": "^14.2.8",
    "@angular/compiler-cli": "^14.2.8",
    "@angular/core": "^14.2.8",
    "@angular/forms": "^14.2.8",
    "@angular/language-service": "^14.2.8",
    "@angular/material": "^14.2.6",
    "@angular/platform-browser": "^14.2.8",
    "@angular/platform-browser-dynamic": "^14.2.8",
    "@angular/router": "^14.2.8",
    "rxjs": "^7.3.0",
    "simply-translate": "^0.20.0",
    "tslib": "^2.3.1",
    "typescript": "4.7.4",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.7",
    "@types/jasmine": "~4.3.0",
    "@types/jasminewd2": "~2.0.10",
    "@types/node": "~18.11.7",
    "copyfiles": "^2.4.1",
    "core-js": "^3.26.0",
    "jasmine-core": "~4.4.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "ng-packagr": "^14.2.2",
    "protractor": "~7.0.0",
    "tslint": "~6.1.3"
  }
}
